{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": true,
    "composite": true,
    "declarationMap": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@astack/core": ["packages/core/src"],
      "@astack/core/*": ["packages/core/src/*"],
      "@astack/components": ["packages/components/src"],
      "@astack/components/*": ["packages/components/src/*"]
    }
  },
  "exclude": ["**/dist", "**/node_modules"]
}
