{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@astack-tech/core": ["packages/core/src"],
      "@astack-tech/core/*": ["packages/core/src/*"],
      "@astack-tech/components": ["packages/components/src"],
      "@astack-tech/components/*": ["packages/components/src/*"],
      "@astack-tech/integrations": ["packages/integrations/src"],
      "@astack-tech/integrations/*": ["packages/integrations/src/*"],
      "@astack-tech/tools": ["packages/tools/src"],
      "@astack-tech/tools/*": ["packages/tools/src/*"]
    }
  },
  "exclude": ["**/dist", "**/node_modules"]
}
